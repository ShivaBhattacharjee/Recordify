{
  "manifest_version": 3,
  "version": "1.0.0",
  "author": "Shiva Bhattacharjee",
  "name": "Recordify",
  "description": "Recordify is a simple extension that allows you to record your screen and save it as a video file.",
  "icons": {
    "16": "./icons/icon-192.png",
    "48": "./icons/icon-192.png",
    "128": "./icons/icon-192.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "./icons/icon-192.png",
      "48": "./icons/icon-192.png",
      "128": "./icons/icon-192.png"
    }
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "permissions": [
    "scripting",
    "activeTab",
    "tabs"
  ]
}